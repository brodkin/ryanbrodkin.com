<?xml version="1.0" encoding="UTF-8"?>

<project name="ryanbrodkin-splash" default="build">

 <target name="build" depends="clean,prepare,lint"/>

 <target name="clean" description="Cleanup build artifacts">
  <delete dir="${basedir}/build/logs"/>
 </target>

 <target name="prepare" depends="clean" description="Prepare for build">
  <mkdir dir="${basedir}/build/logs"/>
 </target>

 <target name="lint" description="Perform syntax check of sourcecode files">
  <apply executable="jshint" failonerror="true">
   <arg value="--checkstyle-reporter app/webroot/javascripts/mdc/ > build/logs/checkstyle-jshint.xml" />
  </apply>
  <apply executable="jshint" failonerror="true">
   <arg value="--jslint-reporter app/webroot/javascripts/mdc/ > build/logs/jslint.xml" />
  </apply>
 </target>


</project>
